<p id="notice"><%= notice %></p>

<h1>Listing Financial Terms</h1>

<table>
  <thead>
    <tr>
      <th>Payer</th>
      <th>Payee</th>
      <th>Amount</th>
      <th>Frequency</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Escalation rate</th>
      <th>Advance</th>
      <th>Deposit</th>
      <th>Contract</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @financial_terms.each do |financial_term| %>
      <tr>
        <td><%= financial_term.payer %></td>
        <td><%= financial_term.payee %></td>
        <td><%= financial_term.amount %></td>
        <td><%= financial_term.frequency %></td>
        <td><%= financial_term.start_date %></td>
        <td><%= financial_term.end_date %></td>
        <td><%= financial_term.escalation_rate %></td>
        <td><%= financial_term.advance %></td>
        <td><%= financial_term.deposit %></td>
        <td><%= financial_term.contract %></td>
        <td><%= link_to 'Show', financial_term %></td>
        <td><%= link_to 'Edit', edit_financial_term_path(financial_term) %></td>
        <td><%= link_to 'Destroy', financial_term, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

